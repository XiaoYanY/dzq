$font-size = 14px

.listItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60px;
  font-family: MicrosoftYaHei;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
  cursor: pointer;
  &:hover{
    color: #1878f3;
  }

  .title{
    flex: 1;
    margin-right: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
  }
  .count{
    color: #999;
    font-size: 14px;
  }
}
.listItemActived{
  transition: all 0.2s ease-in-out;
  font-weight 700;
  color #1878f3;
}
.listItemIcon{
  position absolute;
  left -23px;
}

