$fontColor = #8590a6;
$fontHoverColor = #1878f3;

p{
  margin 0;
}
.fontColor{
  color $fontColor;
}
.tabWrap{
  background #fff;
  margin 0 auto;
  display flex;
  align-items center; 
}
.tabItem{
  padding 10.5px 18px;
  color $fontColor;
  transition all .2s ease-in-out;
  &:hover{
    color #1878f3;
    cursor pointer;
  }
}
.tabActived{
  border-radius 3px;
  color #1878f3;
  background #e5f2ff;
  transition: all .2s ease-in-out;
  font-weight: 700;
}
.listWrap{
  width 100%;
}
.listItem{
  width 100%;
  white-space nowrap;
  overflow hidden;
  text-overflow ellipsis;
  &:hover{
    color $fontHoverColor;
    cursor pointer; 
  }
}
